<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Funcionários</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Ver Funcionário</li>
        </ol>
        <div class="row container justify-content-center border m-auto mt-5">

            <div class="row m-l-0 m-r-0">
                <div class="col-lg-12 col-md-12 mt-4 mb-4">
                    <div class="card-block p-1">
                        <div class="row">
                            <div class="col-lg-3 col-md-6">
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Número</h6>
                                <h6 class="text-muted f-w-400">
                                    <%= loadContent.employee.employeeId %>
                                </h6>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Tipo de funcionário</h6>
                                <h6 class="text-muted f-w-400">
                                    <%= loadContent.employee.employeeType %>
                                </h6>
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Nome</h6>
                                <h6 class="text-muted f-w-400">
                                    <%= loadContent.employee.name %>
                                </h6>
                            </div>
                        </div>

                        <hr class="dashed">

                        <div class="row">
                            <div class="col-lg-3 col-md-6">
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Género</h6>
                                <h6 class="text-muted f-w-400">
                                    <%= loadContent.employee.gender %>
                                </h6>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Data de Nascimento</h6>
                                <h6 class="text-muted f-w-400">
                                    <%= loadContent.employee.dob %>
                                </h6>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Telemóvel</h6>
                                <h6 class="text-muted f-w-400">
                                    <%= loadContent.employee.cellPhone %>
                                </h6>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Email</h6>
                                <h6 class="text-muted f-w-400">
                                    <%= loadContent.employee.email %>
                                </h6>
                            </div>
                        </div>

                        <hr class="dashed">

                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Rua</h6>
                                <h6 class="text-muted f-w-400">
                                    <%= loadContent.employee.address %>
                                </h6>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Cidade</h6>
                                <h6 class="text-muted f-w-400">
                                    <%= loadContent.employee.city %>
                                </h6>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Código Postal</h6>
                                <h6 class="text-muted f-w-400">
                                    <%= loadContent.employee.zip %>
                                </h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>